<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:padding="5dp">
        <LinearLayout
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:id="@+id/linearHome">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivBackHome"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivHome"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/home_active" />
                </RelativeLayout>
                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Home"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/Primary"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearIzin"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivBackIzin"
                        android:layout_width="60dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivIzin"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/izin" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvIzin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_medium"
                    android:text="Izin"
                    android:textColor="@color/Black"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearAbsen"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivBackAbsen"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivAbsen"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/absen" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvAbsen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Absen"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/Black"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearUser"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivBackUser"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/ivUser"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/home" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/gotham"
                    android:id="@+id/tvUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="User"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/Black"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>